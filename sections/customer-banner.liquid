<style>
.custom-banner-section {
  background-color: #f8f9fb;
  padding: 40px 20px;
  font-family: 'Arial', sans-serif;
  position: relative;
}

.banner-container {
  max-width: 1200px;
  margin: 0 auto;
  position: relative;
}

/* Editable Text Indicators (only visible in theme editor) */
.editable-text {
  position: relative;
}

.theme-editor .editable-text {
  border: 2px solid #ff0000;
  padding: 2px 4px;
  margin: 2px 0;
  background: rgba(255, 0, 0, 0.1);
}

/* Header */
.banner-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30px;
  padding-bottom: 20px;
}

.brand-name {
  font-size: 24px;
  font-weight: bold;
  letter-spacing: 2px;
  border: 2px solid #000;
  padding: 8px 12px;
  background: #fff;
}

.header-text {
  font-size: 16px;
  color: #666;
  border: 2px solid #ff0000;
  padding: 8px 12px;
  background: #fff;
}

.cta-button a {
  background-color: #ffeb3b;
  color: #000;
  padding: 12px 24px;
  text-decoration: none;
  font-weight: bold;
  font-size: 14px;
  letter-spacing: 1px;
  display: inline-flex;
  align-items: center;
  gap: 8px;
}

/* Button Animations */
.animated-btn {
  position: relative;
  overflow: hidden;
  transition: all 0.3s ease;
  transform-style: preserve-3d;
}

.animated-btn:hover {
  transform: translateY(-2px) scale(1.02);
  box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);
}

.animated-btn::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255,255,255,0.3), transparent);
  transition: left 0.6s;
}

.animated-btn:hover::before {
  left: 100%;
}

.animated-btn .arrow {
  transition: transform 0.3s ease;
}

.animated-btn:hover .arrow {
  transform: translateX(5px);
  animation: bounce 0.6s infinite;
}

@keyframes bounce {
  0%, 100% { transform: translateX(5px); }
  50% { transform: translateX(8px); }
}

/* Gift Items Grid */
.gift-items-grid {
  margin: 40px 0;
  opacity: 0.8;
}

.gift-row {
  display: grid;
  grid-template-columns: repeat(6, 1fr);
  gap: 20px;
  margin-bottom: 20px;
}

.gift-item {
  height: 80px;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(255, 255, 255, 0.7);
  border: 1px solid #e0e0e0;
  border-radius: 8px;
  padding: 10px;
  transition: transform 0.3s ease;
}

.gift-item:hover {
  transform: scale(1.05);
  background: rgba(255, 255, 255, 0.9);
}

.gift-svg {
  width: 100%;
  height: 100%;
  max-width: 60px;
  max-height: 60px;
}

/* Main Content */
.banner-content {
  text-align: left;
  max-width: 500px;
  margin-bottom: 40px;
}

.banner-title {
  font-size: 48px;
  font-weight: 900;
  margin-bottom: 20px;
  color: #000;
  border: 2px solid #ff0000;
  padding: 8px 12px;
  display: inline-block;
  background: #fff;
}

.banner-description {
  font-size: 16px;
  line-height: 1.6;
  color: #666;
  margin-bottom: 30px;
  border: 2px solid #ff0000;
  padding: 12px;
  background: #fff;
}

.banner-description p {
  margin: 0 0 8px 0;
}

.banner-description p:last-child {
  margin-bottom: 0;
}

.shop-btn {
  background-color: #000;
  color: #fff;
  padding: 15px 30px;
  text-decoration: none;
  font-weight: bold;
  font-size: 14px;
  letter-spacing: 1px;
  display: inline-flex;
  align-items: center;
  gap: 10px;
  border: 2px solid #ff0000;
  box-sizing: border-box;
}

/* Footer */
.banner-footer {
  text-align: center;
  padding-top: 30px;
  border-top: 1px solid #e0e0e0;
}

.banner-footer p {
  font-size: 12px;
  color: #999;
  letter-spacing: 1px;
  margin: 0;
  border: 2px solid #ff0000;
  padding: 8px 12px;
  display: inline-block;
  background: #fff;
}

/* Pulse Animation for Editable Elements */
@keyframes pulse {
  0% { border-color: #ff0000; }
  50% { border-color: #ff6666; }
  100% { border-color: #ff0000; }
}

.editable-text {
  animation: pulse 2s infinite;
}

/* Responsive */
@media (max-width: 768px) {
  .banner-header {
    flex-direction: column;
    text-align: center;
    gap: 15px;
  }
  
  .gift-row {
    grid-template-columns: repeat(3, 1fr);
    gap: 15px;
  }
  
  .banner-title {
    font-size: 36px;
  }
  
  .banner-content {
    text-align: center;
    max-width: 100%;
  }
}

@media (max-width: 480px) {
  .gift-row {
    grid-template-columns: repeat(2, 1fr);
    gap: 10px;
  }
  
  .gift-item {
    height: 60px;
  }
  
  .banner-title {
    font-size: 28px;
  }
  
  .brand-name {
    font-size: 20px;
  }
  
  .header-text {
    font-size: 14px;
  }
}
</style>

