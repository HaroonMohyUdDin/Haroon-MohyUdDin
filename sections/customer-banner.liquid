<div class="custom-banner-section" style="background-image: url('{{ section.settings.background_image | img_url: '1600x900' }}');">
  <div class="banner-overlay"></div>
  <div class="banner-container">
    <!-- Header -->
    <div class="banner-header">
      <div class="brand-name editable-text">{{ section.settings.brand_name | default: 'TISSO VISION' }}</div>
      <div class="header-text editable-text">{{ section.settings.header_text | default: 'Find the label gift for your loved ones' }}</div>
      <div class="cta-button">
        <a href="{{ section.settings.cta_link | default: '/collections/gifts' }}" class="animated-btn">
          <span class="editable-text">{{ section.settings.cta_text | default: 'CHOOSE GIFT' }}</span>
          <span class="arrow">→</span>
        </a>
      </div>
    </div>

    <!-- Main Content -->
    <div class="banner-content">
      <h1 class="banner-title editable-text">{{ section.settings.title | default: 'The Gift Guide' }}</h1>
      <div class="banner-description">
        <p class="editable-text">{{ section.settings.description | default: 'Discover Joy: Your Ultimate Holiday Gift Destination.' }}</p>
        <p class="editable-text">{{ section.settings.sub_description | default: 'Explore our curated selection and find the perfect gifts to delight your loved ones this holiday season.' }}</p>
      </div>
      <div class="banner-cta">
        <a href="{{ section.settings.shop_link | default: '/collections/all' }}" class="shop-btn animated-btn">
          <span class="editable-text">{{ section.settings.shop_text | default: 'SHOP NOW' }}</span>
          <span class="arrow">→</span>
        </a>
      </div>
    </div>

    <!-- Footer -->
    <div class="banner-footer">
      <p class="editable-text">{{ section.settings.footer_text | default: 'SURROUND 1 ENTERGATE WATCH CHOOSING IN SEEKS AND TOP AIR' }}</p>
    </div>
  </div>
</div>

<style>
.custom-banner-section {
  background-size: cover;
  background-position: center center;
  background-repeat: no-repeat;
  min-height: 100vh;
  padding: 40px 20px;
  font-family: 'Helvetica', 'Arial', sans-serif;
  position: relative;
  display: flex;
  align-items: center;
  color: #000;
}

.banner-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(1px);
  z-index: 1;
}

.banner-container {
  max-width: 1200px;
  margin: 0 auto;
  position: relative;
  z-index: 2;
  width: 100%;
}

/* Editable Text (no visible borders in live site) */
.editable-text {
  position: relative;
}

/* Only show borders in theme editor */
.shopify-section-header .editable-text,
.theme-editor .editable-text {
  outline: 2px dashed rgba(255, 0, 0, 0.5);
  outline-offset: 2px;
}

/* Header */
.banner-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 60px;
  padding-bottom: 20px;
}

.brand-name {
  font-size: 18px;
  font-weight: 600;
  letter-spacing: 2px;
  color: #000;
  text-transform: uppercase;
}

.header-text {
  font-size: 14px;
  color: #000;
  text-align: center;
  max-width: 300px;
  letter-spacing: 0.5px;
  font-weight: 400;
}

.cta-button {
  position: relative;
}

.cta-button a {
  background-color: transparent;
  color: #000;
  padding: 8px 0;
  text-decoration: none;
  font-weight: 500;
  font-size: 14px;
  letter-spacing: 1px;
  display: inline-flex;
  align-items: center;
  gap: 8px;
  border: none;
  text-transform: uppercase;
  border-bottom: 1px solid #000;
  border-radius: 0;
}

/* Button Animations */
.animated-btn {
  position: relative;
  overflow: hidden;
  transition: all 0.3s ease;
  transform-style: preserve-3d;
}

.animated-btn:hover {
  transform: translateY(-3px);
}

.animated-btn::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255,255,255,0.4), transparent);
  transition: left 0.6s;
}

.animated-btn:hover::before {
  left: 100%;
}

.animated-btn .arrow {
  transition: transform 0.3s ease;
  font-size: 16px;
}

.animated-btn:hover .arrow {
  transform: translateX(5px);
}

/* Main Content */
.banner-content {
  text-align: left;
  max-width: 600px;
  margin-bottom: 80px;
}

.banner-title {
  font-size: 70px;
  font-weight: 300;
  margin-bottom: 30px;
  color: #000;
  line-height: 1;
  letter-spacing: 1px;
}

.banner-description {
  font-size: 16px;
  line-height: 1.6;
  color: #000;
  margin-bottom: 40px;
  font-weight: 300;
}

.banner-description p {
  margin: 0 0 12px 0;
}

.banner-description p:last-child {
  margin-bottom: 0;
}

.shop-btn {
  background-color: transparent;
  color: #000;
  padding: 12px 0;
  text-decoration: none;
  font-weight: 500;
  font-size: 14px;
  letter-spacing: 1px;
  display: inline-flex;
  align-items: center;
  gap: 12px;
  text-transform: uppercase;
  border-bottom: 1px solid #000;
  border-radius: 0;
}

.shop-btn:hover {
  color: #333;
}

/* Footer */
.banner-footer {
  position: absolute;
  bottom: 30px;
  left: 50%;
  transform: translateX(-50%);
  text-align: center;
}

.banner-footer p {
  font-size: 10px;
  color: #000;
  letter-spacing: 2px;
  margin: 0;
  font-weight: 400;
  text-transform: uppercase;
  opacity: 0.7;
}

/* Responsive */
@media (max-width: 1024px) {
  .banner-title {
    font-size: 56px;
  }
  
  .banner-description {
    font-size: 15px;
  }
}

@media (max-width: 768px) {
  .custom-banner-section {
    min-height: 100vh;
    padding: 30px 15px;
  }

  .banner-header {
    flex-direction: column;
    text-align: center;
    gap: 20px;
    margin-bottom: 40px;
  }
  
  .banner-title {
    font-size: 42px;
    text-align: center;
  }
  
  .banner-content {
    text-align: center;
    max-width: 100%;
  }
  
  .banner-description {
    text-align: left;
  }
  
  .brand-name {
    font-size: 16px;
  }
  
  .header-text {
    font-size: 13px;
    max-width: 250px;
  }
  
  .banner-footer {
    position: relative;
    bottom: auto;
    transform: none;
    margin-top: 40px;
  }
}

@media (max-width: 480px) {
  .banner-title {
    font-size: 32px;
    line-height: 1.1;
  }
  
  .banner-description {
    font-size: 14px;
  }
  
  .shop-btn {
    padding: 10px 0;
    font-size: 13px;
  }
  
  .banner-footer p {
    font-size: 9px;
  }
}

/* Fallback background color if image doesn't load */
.custom-banner-section {
  background-color: #f8f9fb;
}

/* Image loading optimization */
.custom-banner-section[style*="background-image"] {
  background-attachment: fixed;
}

@media (max-width: 768px) {
  .custom-banner-section[style*="background-image"] {
    background-attachment: scroll;
  }
}
</style>

