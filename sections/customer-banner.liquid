
<div class="custom-banner-section">
  <div class="banner-container">
    <div class="banner-content">
      <div class="banner-logo">
        <span class="logo-text">TISSO VISION</span>
      </div>
      <div class="banner-main">
        <h1 class="banner-title">{{ section.settings.banner_title }}</h1>
        <p class="banner-subtitle">{{ section.settings.banner_subtitle }}</p>
        <div class="banner-buttons">
          <a href="{{ section.settings.primary_button_link }}" class="btn btn-primary animated-btn">
            {{ section.settings.primary_button_text }}
          </a>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
.custom-banner-section {
  width: 100%;
  height: 400px;
  background-color: #E8F5F5;
  background-image: url("data:image/svg+xml,%3Csvg width='100' height='100' viewBox='0 0 100 100' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='%23000000' fill-opacity='0.03'%3E%3Cpath d='M20 10h60v10H20zM10 20h10v60H10zM80 20h10v60H80zM20 80h60v10H20z'/%3E%3Cpath d='M30 30h40v40H30z' fill='none' stroke='%23000000' stroke-opacity='0.05' stroke-width='2'/%3E%3Ccircle cx='25' cy='25' r='3'/%3E%3Ccircle cx='75' cy='25' r='3'/%3E%3Ccircle cx='25' cy='75' r='3'/%3E%3Ccircle cx='75' cy='75' r='3'/%3E%3Crect x='35' y='15' width='8' height='4'/%3E%3Crect x='55' y='15' width='8' height='4'/%3E%3Crect x='15' y='35' width='4' height='8'/%3E%3Crect x='15' y='55' width='4' height='8'/%3E%3Crect x='81' y='35' width='4' height='8'/%3E%3Crect x='81' y='55' width='4' height='8'/%3E%3Crect x='35' y='81' width='8' height='4'/%3E%3Crect x='55' y='81' width='8' height='4'/%3E%3C/g%3E%3C/svg%3E");
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 40px 20px;
  position: relative;
  border: 3px solid #000000;
  overflow: hidden;
}

.banner-container {
  max-width: 1200px;
  width: 100%;
  position: relative;
}

.banner-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: #000000;
}

.banner-logo {
  flex: 1;
}

.logo-text {
  font-size: 2.5rem;
  font-weight: 900;
  letter-spacing: 2px;
  color: #000000;
  text-transform: uppercase;
}

.banner-main {
  flex: 2;
  text-align: center;
  padding-left: 40px;
}

.banner-title {
  font-size: 3.5rem;
  font-weight: 900;
  margin-bottom: 1rem;
  line-height: 1.1;
  color: #000000;
  text-transform: uppercase;
  letter-spacing: 1px;
}

.banner-subtitle {
  font-size: 1.1rem;
  margin-bottom: 2rem;
  color: #333333;
  max-width: 500px;
  margin-left: auto;
  margin-right: auto;
  line-height: 1.5;
  font-weight: 400;
}

.banner-buttons {
  display: flex;
  justify-content: center;
}

.btn {
  padding: 15px 35px;
  border-radius: 0;
  text-decoration: none;
  font-weight: 700;
  font-size: 1rem;
  transition: all 0.3s ease;
  border: 3px solid #000000;
  position: relative;
  overflow: hidden;
  text-transform: uppercase;
  letter-spacing: 1px;
}

.btn-primary {
  background: #000000;
  color: #ffffff;
}

.animated-btn {
  transform: translateY(0);
}

.animated-btn:hover {
  transform: translateY(-3px);
  box-shadow: 5px 5px 0px #000000;
}

.btn-primary:hover {
  background: #333333;
}

/* Mobile Styles */
@media (max-width: 768px) {
  .custom-banner-section {
    height: auto;
    min-height: 300px;
    padding: 30px 15px;
  }
  
  .banner-content {
    flex-direction: column;
    text-align: center;
  }
  
  .banner-main {
    padding-left: 0;
    margin-top: 20px;
  }
  
  .logo-text {
    font-size: 2rem;
    margin-bottom: 20px;
  }
  
  .banner-title {
    font-size: 2.5rem;
  }
  
  .banner-subtitle {
    font-size: 1rem;
    margin-bottom: 1.5rem;
  }
  
  .btn {
    padding: 12px 30px;
    font-size: 0.9rem;
  }
}

@media (max-width: 480px) {
  .logo-text {
    font-size: 1.5rem;
  }
  
  .banner-title {
    font-size: 2rem;
  }
  
  .banner-subtitle {
    font-size: 0.9rem;
  }
  
  .btn {
    padding: 10px 25px;
  }
}
</style>

{% schema %}
{
  "name": "Custom Banner",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "banner_title",
      "label": "Banner Title",
      "default": "The Gift Guide"
    },
    {
      "type": "textarea",
      "id": "banner_subtitle",
      "label": "Banner Subtitle",
      "default": "Discover our Top Ultimate Holiday Gift Essentials. Explore our curated selection and find the perfect gifts to make this holiday season truly memorable."
    },
    {
      "type": "text",
      "id": "primary_button_text",
      "label": "Primary Button Text",
      "default": "SHOP NOW"
    },
    {
      "type": "url",
      "id": "primary_button_link",
      "label": "Primary Button Link"
    }
  ],
  "presets": [
    {
      "name": "Custom Banner"
    }
  ]
}
{% endschema %}