{%comment %}
Custom Banner Section - Pixel Perfect Hero Banner
{%endcomment %}

<section class="custom-banner">
    <div class="banner-content">
        <h1>{{section.settings.headings }}</h1>
        <p>{{section.settings.subheadings }}</p>
        <a href="{{section.settings.button_link }}" class="btn">{{section.settings.button_link }}</a>
    </div>
</section>

<style>
    .custom-banner {
    background: url({{section.settings.bg_image | img_url: '2000px' }}) no-repeat center center/cover;
    padding: 80px 20px;
    text-align: center;
    color: #000;
    
    }
    .custom-banner h1{
    font-size: 1.1 rem;
    font-weight:bold;

    }
    .custom-banner p{
    font-size: 1.1 rem;
    margin:15px 0;
    
    }.custom-banner .btn{
    background: #000;
    color: #fff;
    padding:10px 25px;
    text-decoration: none;
    border-radius:4px;
    
    }
    @media(max_width:768px){
    .custom-banner h1{font-size:1.8rem}
    }
</style>

{%schema %}
{
    "name": "Custom Banner",
    "settings":[
        {"type": "image_picker", "id":"bg_image", "label":"Background Image"},
        {"type": "text", "id":"heading", "label":"Heading", "default":"The Gift Guide"},
        {"type": "textarea", "id":"subheading", "label":"Subheading", "default": "Discover Joy: Your Ultimate Holiday Gift Destination. Explore our curated selection and find the perfect gifts to delight your loved ones this holiday season."},
        {"type": "text", "id":"button_label", "label":"Button_label", "default":"Shop Now"},
        {"type": "url", "id":"button_link", "label":"Button Link"},
    ],
    "presets": [
        {"name": "Custom Banner"}
    ]
}
{%endschema %}