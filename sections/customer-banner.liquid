{% schema %}
{
  "name": "Custom Banner",
  "settings": [
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background Image"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "The Gift Guide"
    },
    {
      "type": "textarea",
      "id": "subtext",
      "label": "Subtext",
      "default": "Discover Joy: Your Ultimate Holiday Gift Destination. Explore our curated selection and find the perfect gifts to delight your loved ones this holiday season."
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "SHOP NOW"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    }
  ],
  "presets": [
    {
      "name": "Custom Banner"
    }
  ]
}
{% endschema %}

<section class="custom-banner">
  <div class="banner-wrapper" 
       style="background-image: url('{{ section.settings.background_image | image_url: width: 1600 }}');">

    <div class="banner-content">
      <h2>{{ section.settings.heading }}</h2>
      <p>{{ section.settings.subtext }}</p>
      {% if section.settings.button_text != blank %}
        <a href="{{ section.settings.button_link }}" class="banner-btn">
          {{ section.settings.button_text }}
        </a>
      {% endif %}
    </div>
  </div>
</section>

<style>
  .custom-banner {
    width: 100%;
    margin: 0 auto;
    padding: 60px 20px;
  }
  .banner-wrapper {
    background-size: cover;
    background-position: center;
    display: flex;
    align-items: center;
    justify-content: flex-start;
    padding: 80px 40px;
    min-height: 500px;
    position: relative;
  }
  .banner-content {
    max-width: 550px;
    background: rgba(255,255,255,0.9);
    padding: 30px;
    border-radius: 8px;
  }
  .banner-content h2 {
    font-size: 2.5rem;
    font-weight: 700;
    margin-bottom: 15px;
  }
  .banner-content p {
    font-size: 1rem;
    line-height: 1.6;
    margin-bottom: 20px;
  }
  .banner-btn {
    display: inline-block;
    padding: 12px 30px;
    background: #000;
    color: #fff;
    font-weight: 600;
    text-decoration: none;
    border-radius: 4px;
    transition: 0.3s;
  }
  .banner-btn:hover {
    background: #444;
  }
</style>
